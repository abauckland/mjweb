<head>  
  <%= stylesheet_link_tag    'mjweb/application', media: 'all'%>
  <%= javascript_include_tag 'mjweb/application'%>
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>

<p id="notice"><%= notice %></p>


<h1>Website Design Settings</h1>



<%= bootstrap_form_for(@design) do |f| %>

  <p id="notice"><%= notice %></p>
  
  <%= f.hidden_field :company_id, :value => current_user.company_id %>

  <% if @design.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@design.errors.count, "error") %> prohibited this detail from being saved:</h2>

      <ul>
      <% @design.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.text_field :tile_colour, label: "Colour of Information Tiles"  %>
  </div>
  <div class="field">
    <%= f.collection_select(:background_id, Mjweb::Background.all, :id, :name, {:selected => @design.background_id, :prompt => :true})%>
  </div>
 <div class="field">
    <%= f.collection_select(:font_id, Mjweb::Font.all, :id, :name, {:selected => @design.background_id, :prompt => :true}) %>
  </div>

  <div class="actions">
    <%= f.submit class: "btn btn-success" %>
    <%= link_to "Back to Settings Menu", mjweb.settings_path, class: "btn btn-sm btn-warning btn pull-right" %>
  </div>
<% end %>