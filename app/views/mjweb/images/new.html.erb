<div class="page_title">
    <div class="page_title_text">
        <h1>Upload new image</h1>        
    </div> 
    <div class="title_help_tooltip" id="page_images_new"></div>     
</div>


<div class="content">
    <div class="column_1">
        <div class="column_content">
            
            <% if @image.errors.any? %>
            <div class="column_error">
            <p><%= pluralize(@image.errors.count, "error") %> prohibited this detail from being saved:</p>
                  <ul>
                  <% @image.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                  </ul>
            </div>
            <% end %>

            <div class="column_sub_content">
                <div class="column_form">
                <%= form_for(@image, :html => {:multipart => true}) do |f| %>       
                  <%= f.hidden_field :company_id, :value => current_user.company_id %>    
                    
                        <div class="column_form_item">
                            <label class="column_form_label" style="width:50px">Name:</label>                        
                            <div class="column_form_input"><%= f.text_field :name %></div>
                            <div class="column_help_tooltip" id="website_image_name"></div> 
                        </div>
                        <div class="column_form_item">
                            <label class="column_form_label" style="width:50px">Image:</label>                        
                            <div class="column_form_input"><%= f.file_field :image, accept: "image/*", :class=>"form-control"  %></div>
                            <div class="column_help_tooltip" id="website_image_file"></div>  
                        </div>
                </div>
           </div>     
                
           <div class="column_footer">
                <div class="column_line"></div>
                <div class="column_submit"><%= f.submit "save"%></div>
                <% end %>
           </div>
            
        </div>
    </div>
    <div class="column_2 column_2_blank"></div> 
    <div class="column_3 column_3_blank"></div> 
</div>

