<div class="row title_band">
    <div class="page_title">
        <h1>Upload New Image</h1>
    </div>
</div>

<div class="row">
    <div class="col-1-3 column_1">
        <div class="border">

<!-- error messages - associated with form start--> 
            <%= render :partial => "form_error", :locals => {:item => @image} %>

<!-- form column start-->
            <div class="row">
                <%= form_for(@image, :html => {:multipart => true}) do |f| %>
                  <%= f.hidden_field :company_id, :value => current_user.company_id %>
                    <fieldset>

                        <!-- form input[select] -->
                        <div class="form_tooltip" id="website_image_name"></div>
                        <label class="label_80">Name:</label>
                        <span>
                           <%= f.text_field :name %>
                        </span></br>

                        <!-- form input[file] -->
                        <div class="form_tooltip" id="website_image_file"></div>
                        <label class="label_80">Image:</label>
                        <span>
                           <%= f.file_field :image, accept: "image/*" %>
                        </span></br>

                    </fieldset>
            </div>
<!-- column footer start--> 
            <div class="row">
                <div class="form_footer">
                    <%= f.submit "save"%>
                    <%= link_to "cancel", images_path %>
                </div>
                <% end %>
            </div>
        </div>
    </div>

    <div class="col-1-3 column_2">
        <div class="border blank_column"></div>
    </div>
    <div class="col-1-3 column_3">
        <div class="border blank_column"></div>
    </div>
</div>