<style>
.image_delete{
  padding: 5px 0px 20px 0px;
}
</style>
  
<div class="row">

    <div class="col-lg-12">
        <h2 class="page-header">Update Loaded Images</h2>
    </div>
 
    <% if @images %>        
        <% @images.each do |image| %>               
            <div class="col-lg-3 col-md-4 col-sm-4 col-xs-6 thumb">  
                <%= image_tag(image.image, {:width => "200px", :class=> "img-responsive"}) if image.image? %>
                <div class="image_delete"><%= link_to 'Destroy', image, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-xs btn-danger"  %></div>
            </div>
        <% end %>    
    <% else %>
        <div class="website_images">
            No images have been uploaded.
        </div>
    <% end %>
</div>
<%= link_to 'New Image', new_image_path, class: "btn btn-sm btn-success"  %>
<%= link_to "Back to Settings Menu", mjweb.settings_path, class: "btn btn-sm btn-warning btn pull-right" %>
            