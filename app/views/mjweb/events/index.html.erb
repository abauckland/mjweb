<h1>Events</h1>

<div class="row-fluid">
  <div class="span4 well">

<table class="table table-striped table-hover" style="width : 100%" >
  <thead>
    <tr>
      <th>Topic</th>
      <th>Start</th>
      <th>Finish</th>
      <th>Venue</th>
      <th>Address</th>
      <th>Postcode</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.topic %></td>
        <td><%= event.start %></td>
        <td><%= event.finish %></td>
        <td><%= event.venue %></td>
        <td><%= event.address %></td>
        <td><%= event.postcode %></td>
        <td>
            <div class="btn-group-xs">
                <%= link_to 'Edit', edit_event_path(event), :class => "btn btn-sm btn-success" %>
                <%= link_to 'Delete', event, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-sm btn-danger" %>
            </div>
        </td>        
      </tr>
    <% end %>
  </tbody>
</table>

<br>


    <%= link_to 'Add Event', new_event_path, class: "btn btn-sm btn-success" %>
    <%= link_to "Back to Menu", main_app.dashboards_path, class: "btn btn-sm btn-warning btn pull-right" %>
    
</div></div>