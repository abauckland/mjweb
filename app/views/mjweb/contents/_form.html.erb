<%= bootstrap_form_for(@content) do |f| %>
  <% if @content.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@content.errors.count, "error") %> prohibited this content from being saved:</h2>

      <ul>
      <% @content.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :company_id, :value => current_user.company_id %>

  <div class="field">
    <%= f.collection_select(:tile_id, @tiles, :id, :name)%>
  </div>
  <div class="field">
    <%= f.text_field :order %>
  </div>
  <div class="field">
    <%= f.select(:display, [['All devices', 'All devices'], ['Desktops & Tablets', 'Desktops & Tablets'], ['Desktops only', 'Desktops only']]) %>
  </div>
  <div class="field">
    <%= f.text_field :link %>
  </div>
  <div class="actions">
    <%= f.submit class: "btn btn-success" %>
    <%= link_to "Back to tile list", mjweb.contents_path, class: "btn btn-sm btn-warning btn pull-right" %>
  </div>
<% end %>
