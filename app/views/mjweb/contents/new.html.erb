<div class="row title_band">
    <div class="page_title">
        <h1>Add Tile to Home Page</h1>
    </div>
    <div class="title_help" id="page_content_new"></div>
</div>

<div class="row">
    <div class="col-1-3 column_1">
        <div class="border">

<!-- error messages - associated with form start--> 
            <%= render :partial => "form_error", :locals => {:item => @content} %>

<!-- form column start-->
            <div class="row">
                <%= form_for(@content) do |f| %>
                  <%= f.hidden_field :company_id, :value => current_user.company_id %>
                  <%= f.hidden_field :tile_ref, :value => @tile_ref %> 
                    <fieldset>

                        <!-- form input[select] -->   
                        <div class="form_tooltip" id="website_tile_type"></div>
                        <label class="label_120">Select Tile Type:</label>
                        <span>
                           <%= f.collection_select(:tile_id, @tiles, :id, :name) %>
                        </span></br>

                        <!-- form input[select] -->   
                        <div class="form_tooltip" id="website_tile_display"></div>
                        <label class="label_120">Set Display Options:</label>
                        <span>
                           <%= f.select(:display, [['All devices', 'All devices'], ['Desktops & Tablets', 'Desktops & Tablets'], ['Desktops only', 'Desktops only']]) %>
                        </span></br>

                        
                    </fieldset>
            </div>
<!-- column footer start--> 
            <div class="row">
                <div class="form_footer">
                    <%= f.submit "save"%>
                    <%= link_to "cancel", contents_path %>
                </div>
                <% end %>
            </div>
        </div>
    </div>

    <div class="col-1-3 column_2">
        <div class="border blank_column"></div>
    </div>
    <div class="col-1-3 column_3">
        <div class="border blank_column"></div>
    </div>
</div>

  


