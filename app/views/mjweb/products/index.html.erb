<h1>Product Information</h1>

<table class="table table-striped table-hover" style="width : 100%" >
  <thead>
    <tr>
      <th>Title</th>
      <th>Text</th>
      <th>Link text</th>
      <th>Link url</th>
      <th>Image</th>
      <th width="120px"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.title %></td>
        <td><%= product.text %></td>
        <td><%= product.link_text %></td>
        <td><%= product.link_url %></td>
        <td><%= image_tag(product.image.image_url(:thumb)) if product.image.image? %></td>
        <td>
            <div class="btn-group-xs">        
                <%= link_to 'Edit', edit_product_path(product), :class => "btn btn-sm btn-success"  %>
                <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-sm btn-danger"  %>
            </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Item', new_product_path, class: "btn btn-sm btn-success"  %>
<%= link_to "Back to Contents List", mjweb.contents_path, class: "btn btn-sm btn-warning btn pull-right" %>

