<head>
  <title>MyHQ</title>
  
  <%= stylesheet_link_tag    'mjweb/application', media: 'all'%>
  <%= javascript_include_tag 'mjweb/application'%>
  <%= csrf_meta_tags %>
  
  <style>
    <% @colour_settings.each_with_index do |setting, i| %>        
        .colour_<%= (i + 1) %>{
            color: <%= setting[:text] %>;
            background-color: <%= setting[:tile] %>;
            background-image: <%= setting[:tile_image] %>;            
        }           

        .colour_<%= (i + 1) %>:hover{
            color: <%= setting[:text_hover] %>;
            background-color: <%= setting[:tile_hover] %>;
            background-image: <%= setting[:tile_image_hover] %>;
        } 
    <% end %>

    body {
        /* IE10 Consumer Preview */ 
        background-image: -ms-radial-gradient(left top, ellipse farthest-corner, #FFFFFF 30%, <%= @background_colour %> 200%);
        
        /* Mozilla Firefox */
        background-image: -moz-radial-gradient(left top, ellipse farthest-corner, #FFFFFF 30%, <%= @background_colour %> 200%);
        
        /* Opera */ 
        background-image: -o-radial-gradient(left top, ellipse farthest-corner, #FFFFFF 30%, <%= @background_colour %> 200%);
        
        /* Webkit (Safari/Chrome 10) */ 
        background-image: -webkit-gradient(radial, left top, 0, left top, 1012, color-stop(0.3, #FFFFFF), color-stop(2, <%= @background_colour %>));
        
        /* Webkit (Chrome 11+) */ 
        background-image: -webkit-radial-gradient(left top, ellipse farthest-corner, #FFFFFF 30%, <%= @background_colour %> 200%);
        
        /* W3C Markup, IE10 Release Preview */ 
        background-image: radial-gradient(ellipse farthest-corner at left top, #FFFFFF 30%, <%= @background_colour %> 200%);
    }

    .tile_link_icon {
        background: image-url('web_icons.png') 80px 0;
    }
  </style>
  
  
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>

<header>
  <div class="login_container">
      <%= link_to "Log-in", main_app.new_user_session_path, class: "login_link"%>   
  </div>
     
    <div class="header_container">  
    
        

                <div class="company_logo"></div>  
</div>
    
    <% if !@detail.tagline.empty? %>
        <div class="company_tagline"> <table><tr><td class="tagline_cell"><%= @detail.tagline %></td></tr></table></div> 
    <% end %>

    <div class="social_media_container">                  
        <% if !@detail.facebook.empty? %>
            <div class="social_media_link">
                <%= link_to " ", @detail.facebook, class: "facebook"%> 
            </div>
        <% end %>
        <% if !@detail.twitter.empty? %>
            <div class="social_media_link">
                <%= link_to " ", @detail.twitter, class: "twitter"%> 
            </div>
        <% end %>
        <% if !@detail.googleplus.empty? %>
            <div class="social_media_link">
                <%= link_to " ", @detail.googleplus, class: "googleplus"%> 
            </div>
        <% end %>
        <% if !@detail.linkedin.empty? %>
            <div class="social_media_link">
                <%= link_to " ", @detail.linkedin, class: "linkedin"%> 
            </div>
        <% end %>  
    </div> 
  
 
</header> 



<article>
    <div class="content">
    
    <% @contents.each_with_index do |content| %>    
        <%= display_web_tiles(content, @detail) %>
    <% end%>
    
    </div>
      
</article>

<footer>
    <div class="footer_container">
        <div class="myhq_link">
            <a href="#">
                
            </a>
        </div>                
    </div>    
</footer>    
                       