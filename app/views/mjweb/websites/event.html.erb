 <table style="width : 100%" >
  <thead>
    <tr>
      <th>Date</th>
      <th>Time</th>
      <th>Topic</th>
      <th>Venue</th>
      <th>Address</th>
    </tr>
  </thead>

  <tbody>
    <% if @events %>
        <% @events.each do |event| %>
          <tr>
            <td><%= event.start.strftime("%a %b #{time.day.ordinalize}") %></td>
            <td><%= event.start.to_s(:time) %> - <%= event.finish.to_s(:time) %></td>
            <td><%= event.topic %></td>
            <td><%= event.venue %></td>
            <td><%= event.address %>, <%= event.postcode %></td>
          </tr>
        <% end %>
    <% end %>
  </tbody>
</table>  