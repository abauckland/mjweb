<div class="row title_band">
    <div class="page_title">
        <h1>Loaded Backgrounds</h1>
    </div>
    <div class="title_help" id="background_index"></div>       
    <div><%= link_to'Upload Background', new_background_path, class: "title_button" %></div>
</div>

<div class="row">

    <div class="col-1-1 column_1">
        <div class="border">
                                        
        <%= render :partial => "flash_notice" %>                 
                        
            <div class="row">
                <% if @backgrounds %>        
                    <% @backgrounds.each do |background| %> 
                        <div class="image_tile">
                            <%= image_tag(background.background_url(:thumb))%>
                            <%= link_to '', background, method: :delete, data: { confirm: 'Are you sure?' }, title: "delete image" %>                      
                        </div>
                        <% end %>
                <% else %> 
                    <p>No background images have been uploaded.</p>
                <% end %>   
            </div>
        </div>
    </div>

</div>