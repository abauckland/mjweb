<style>
.image_delete{
  padding: 5px 0px 20px 0px;
}
</style>
  
<div class="row">

    <div class="col-lg-12">
        <h3 class="page-header">Loaded Background Images</h3>
    </div>
 
    <% if @backgrounds %>        
        <% @backgrounds.each do |background| %>               
            <div class="col-lg-3 col-md-4 col-sm-4 col-xs-6 thumb">  
                <%= image_tag(background.background, {:width => "100px", :height => "100px"}) if background.background? %>
                <div class="image_delete"><%= link_to 'Destroy', background, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-xs btn-danger"  %></div>
            </div>
        <% end %>    
    <% else %>
        <div class="website_images">
            No font images have been uploaded.
        </div>
    <% end %>
</div>
<%= link_to 'Upload Background', new_background_path, class: "btn btn-sm btn-success"  %>

            