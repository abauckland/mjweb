<!DOCTYPE html>
<html>
<head>
  <title>MyHQ</title>
  
  <%= stylesheet_link_tag    'mjweb/application'%>
  <%= javascript_include_tag 'mjweb/application'%>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  
</head>
<body>

<% if notice %>
  <p class="alert alert-success"><%= notice %></p>
<% end %>
<% if alert %>
  <p class="alert alert-danger"><%= alert %></p>
<% end %>

<% if current_user %>
<nav class="navbar navbar-default" role="navigation">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= image_tag current_user.company.logo, :class => 'navbar-brand' %>
      <%= link_to current_user.name, main_app.dashboards_path, :class => 'navbar-brand navbar-left' %>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav navbar-right">        
        <% if policy(Company.first).new? %>
            <li><%= link_to "Events", mjweb.events_path, :class => 'navbar-link'  %></li>
        <% end %> 
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">Settings <b class="caret"></b></a>
          <ul class="dropdown-menu">
            <li><%= link_to 'Edit User Details', main_app.edit_user_registration_path(current_user.id) %></li>           
            <% if policy(current_user).edit? %>
                <li><%= link_to 'Add/Delete Employees', main_app.users_path %></li>
                <li><%= link_to 'Edit Company Details', main_app.edit_company_path(current_user.company_id) %></li>                
            <% end %>            
            <% if policy(Company.first).new? %>
                <li><%= link_to 'Manage Accounts', main_app.companies_path %></li>
                <li><%= link_to 'MyHQ Plans', nil %></li>                
            <% end %>
            <li><%= link_to 'Website Settings', mjweb.settings_path %></li>  
          </ul>
        </li>
        <li><%= link_to "Logout", main_app.destroy_user_session_path, method: :delete, :class => 'navbar-link'  %></li>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>
<% end %>
        
    <div class="container">  
        <%= yield %>
    </div>
  
</body>
</html>
