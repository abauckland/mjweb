<style>
.image_delete{
  padding: 5px 0px 20px 0px;
}
</style>

<div class="row">

    <div class="col-lg-12">
        <h1 class="page-header">Selected Images</h1>
    </div>

    <% if @imagesettings %>
        <% @imagesettings.each do |imagesetting| %>
        <div class="col-lg-3 col-md-4 col-sm-4 col-xs-6 thumb">  
            <%= image_tag(imagesetting.image.image, {:width => "200px", :class=> "img-responsive"})%>
            <div class="image_delete"><%= link_to 'Destroy', imagesetting, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-xs btn-danger"  %></div>
        </div>
        <% end %>    
    <% else %>
        <div class="website_images">
            No images have been uploaded.
        </div>
    
    <% end %>
</div>

<%= link_to 'Add Image', new_imagesetting_path(:content_id => @content.id), class: "btn btn-sm btn-warning"  %>
<%= link_to "Back to Contents List", mjweb.contents_path, class: "btn btn-sm btn-warning btn pull-right" %>