<div class="row title_band">
    <div class="page_title">
        <h1>Image Tile: Selected Images</h1>
    </div>
    <div class="title_help" id="page_imagesettings_new"></div>
    <div><%= link_to "add image", new_imagesetting_path(:content_id => @content.id), class: "title_button" %></div>
</div>

<div class="row">

    <div class="col-1-1 column_1">
        <div class="border">

        <%= render :partial => "flash_notice" %>

            <div class="row">
                <% if @imagesettings %>
                    <% @imagesettings.each do |imagesetting| %> 
                        <div class="image_tile">
                            <%= image_tag(imagesetting.image.image_url(:thumb))%>
                            <%= link_to '', imagesetting, method: :delete, data: { confirm: 'Are you sure?' }, class: 'line_delete_icon', title: "delete image" %>
                        </div>
                        <% end %>
                <% else %>
                    <p>No images select.</p>
                <% end %>
            </div>
        </div>
    </div>

</div>