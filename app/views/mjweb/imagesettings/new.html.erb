<h2>Add new image</h2>

<%= bootstrap_form_for(@imagesetting) do |f| %>
  <% if @imagesetting.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@imagesetting.errors.count, "error") %> prohibited this image from being added:</h2>

      <ul>
      <% @imagesetting.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
    
  <%= f.hidden_field :content_id, :value => @content.id %>

  <div class="field">
        <%= f.collection_select(:image_id, @images, :id, :name) %> 
  </div>

  <div class="actions">
    <%= f.submit class: "btn btn-success" %>
    <%= link_to "Back to Image List", list_imagesetting_path(:id => @content.id), class: "btn btn-sm btn-warning btn pull-right" %>
  </div>
<% end %>

