<h1>Services</h1>

<table class="table table-striped table-hover" style="width : 100%" >
  <thead>
    <tr>
      <th>Title</th>
      <th>Text</th>
      <th>Link</th>
      <th>Image</th>
      <th width="120px"></th>
    </tr>
  </thead>

  <tbody>
    <% @services.each do |service| %>
      <tr>
        <td><%= service.title %></td>
        <td><%= service.text %></td>
        <td><%= service.link %></td>
        <td><%= image_tag(service.image.image_url(:thumb)) if service.image.image? %></td>
        <td>
            <div class="btn-group-xs">        
                <%= link_to 'Edit', edit_service_path(service), :class => "btn btn-sm btn-success"  %>
                <%= link_to 'Destroy', service, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-sm btn-danger"  %>
            </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Service', new_service_path, class: "btn btn-sm btn-success"  %>
<%= link_to "Back to Contents List", mjweb.contents_path, class: "btn btn-sm btn-warning btn pull-right" %>