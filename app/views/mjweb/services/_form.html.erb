<%= bootstrap_form_for(@service) do |f| %>
  <% if @service.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@service.errors.count, "error") %> prohibited this service from being saved:</h2>

      <ul>
      <% @service.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <%= f.hidden_field :company_id, :value => current_user.company_id %>
  
    <%= f.text_field :title %>
    
    <% if @images %>
        <%= f.collection_select(:image_id, @images, :id, :name) %>
    <% else %>    
        No images are available, please upload images before selecting         
    <% end %>
    
    <%= f.text_area :text %>

    <%= f.url_field :link %>

    <%= f.submit  class: "btn btn-success"%>
    <%= link_to "Back to List of Services", mjweb.services_path, class: "btn btn-sm btn-warning btn pull-right" %>
<% end %>
