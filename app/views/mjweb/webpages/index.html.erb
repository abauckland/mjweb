<h1>Webpage Information</h1>

<table class="table table-striped table-hover" style="width : 100%" >
  <thead>
    <tr>
      <th>Title</th>
      <th>Text</th>
      <th>Link text</th>
      <th>Link url</th>
      <th>Image</th>
      <th width="120px"></th>
    </tr>
  </thead>

  <tbody>
    <% @webpages.each do |webpage| %>
      <tr>
        <td><%= webpage.title %></td>
        <td><%= webpage.text %></td>
        <td><%= webpage.link_text %></td>
        <td><%= webpage.link_url %></td>
        <td><%= image_tag(webpage.image.image_url(:thumb)) if webpage.image_id? %></td>
        <td>
            <div class="btn-group-xs">        
                <%= link_to 'Edit', edit_webpage_path(webpage), :class => "btn btn-sm btn-success"  %>
                <%= link_to 'Destroy', webpage, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-sm btn-danger"  %>
            </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Item', new_webpage_path, class: "btn btn-sm btn-success"  %>
<%= link_to "Back to Contents List", mjweb.contents_path, class: "btn btn-sm btn-warning btn pull-right" %>
