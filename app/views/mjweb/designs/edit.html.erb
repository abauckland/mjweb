<div class="row title_band">
    <div class="page_title">
        <h1>Design Settings</h1>
    </div>
    <div class="title_help" id="page_design_edit"></div>
</div>

<div class="row">
    <div class="col-1-3 column_1">
        <div class="border">

<!-- error messages - associated with form start--> 
            <%= render :partial => "form_error", :locals => {:item => @design} %>

<!-- form column start-->
            <div class="row">
                <%= form_for(@design) do |f| %>
                    <%= f.hidden_field :company_id, :value => current_user.company_id %> 
                    <fieldset>

                        <!-- form input[text] --> 
                        <div class="form_tooltip" id="website_tile_colour"></div>
                        <label class="label_80">Tile Colour:</label>
                        <span>
                            <%= f.color_field :tile_colour %>
                        </span></br>

                        <!-- form input[select] -->   
                        <div class="form_tooltip" id="website_background"></div>
                        <label class="label_80">Background:</label>
                        <span>
                           <%= f.select :background_id, options_for_select(Mjweb::Background.all.map{ |c| [c.name, c.id, {'data-imagesrc' => c.background_url(:thumb)}] }, @design.background_id) %>
                        </span></br>

                        <!-- form input[select] -->   
                        <div class="form_tooltip" id="website_font"></div>
                        <label class="label_80">Title Font:</label>
                        <span>
                           <%= f.select :font_id, options_for_select(Mjweb::Font.all.map{ |c| [c.name, c.id, {'data-imagesrc' => c.font_url}] }, @design.font_id) %>
                        </span></br>
                       
                    </fieldset>
            </div>
<!-- column footer start--> 
            <div class="row">
                <div class="form_footer">
                    <%= f.submit "save"%>
                    <%= link_to "cancel", contents_path %>
                </div>
                <% end %>
            </div>
        </div>
    </div>

    <div class="col-1-3 column_2">
        <div class="border blank_column"></div>
    </div>
    <div class="col-1-3 column_3">
        <div class="border blank_column"></div>
    </div>
</div>