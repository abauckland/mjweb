<div class="row title_band">
    <div class="page_title">
        <h1>Website Pages</h1>
    </div>
    <div class="title_help" id="page_pages_index"></div>
    <div><%= link_to "add page", new_page_path, class: "title_button" %></div>
</div>

<div class="row">

    <div class="col-1-1 column_1">
        <div class="border">

            <%= render :partial => "flash_notice" %>

            <div class="row">
                <table>
                    <thead>
                        <tr>
                            <th class="page_name">Title</th>
                            <th class="row_button no_buttons_3"></th>
                        </tr>
                    </thead>
                </table>

                <table>
                    <tbody>
                        <% if @pages %>
                            <% @pages.each do |page| %>
                                <tr>
                                    <td class="page_name"><%= page.name %></td>
                                    <td class="row_button no_buttons_3">
                                        <%= page_used(page) %>
                                        <%= link_to '', infos_path(:id => page.id), class: 'line_menu_icon', title: "edit content" %>
                                        <%= link_to '', edit_page_path(page), class: 'line_edit_icon', title: "edit page" %>
                                    </td>
                                </tr>
                            <% end %>  
                        <% end %>
                    </tbody>
                </table>

            </div>
        </div>
    </div>

</div>