<div class="row">
    <div class="col-1-3 column_1">
        <div class="border">

<!-- error messages - associated with form start--> 
            <%= render :partial => "form_error", :locals => {:item => @page} %>

<!-- form column start-->
            <div class="row">
                <%= form_for(@page) do |f| %>
                    <%= f.hidden_field :company_id, :value => current_user.company_id %>  
                    <fieldset>

                        <!-- form input[text] --> 
                        <div class="form_tooltip" id="page_title"></div>
                        <label class="label_80">Title:*</label>
                        <span>
                            <%= f.text_field :name, :maxlength => 30, class: "maxlength" %>
                            <p class="input_note">Maximum of 30 characters</p>
                        </span></br>

                       
                    </fieldset>
            </div>
<!-- column footer start--> 
            <div class="row">
                <div class="form_footer">
                    <%= f.submit "save"%>
                    <%= link_to "cancel", pages_path %>
                </div>
                <% end %>
            </div>
        </div>
    </div>

    <div class="col-1-3 column_2">
        <div class="border blank_column"></div>
    </div>
    <div class="col-1-3 column_3">
        <div class="border blank_column"></div>
    </div>
</div>