<div class="content">
    <div class="column_1">
        <div class="column_content">
        
        <% if @page.errors.any? %>
            <div class="column_error">
                <p><%= pluralize(@page.errors.count, "error") %> prohibited this project from being created</p>
                <ul>
                <% @page.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
                </ul>            
            </div>
        <% end %>
        
            <div class="column_sub_content">
                <div class="column_form">
                    <%= form_for(@page) do |f| %>
                        <%= f.hidden_field :company_id, :value => current_user.company_id %>  
                        
                            <div class="column_form_item">
                                <label class="column_form_label" style="width:80px">Title:*</label>                        
                                <div class="column_form_input"><%= f.text_field :name, :maxlength => 30 %></div>
                                <div class="column_help_tooltip" id="page_title"></div>
                            </div>
                </div>                 
            </div>

           <div class="column_footer">
                <div class="column_line"></div>
                <div class="column_submit"><%= f.submit "save"%></div>
                <div class="column_cancel"><%= link_to "cancel", pages_path %></div>
                <% end %>
           </div>
            
        </div>
    </div>
    <div class="column_2 column_2_blank"></div> 
    <div class="column_3 column_3_blank"></div> 

</div>