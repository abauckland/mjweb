<div class="row title_band">
    <div class="page_title">
        <h1>Add Font Type</h1>
    </div>
    <div class="title_help" id="fonts_new"></div>
</div>

<div class="row">
    <div class="col-1-3 column_1">
        <div class="border">

<!-- error messages - associated with form start--> 
            <%= render :partial => "form_error", :locals => {:item => @font} %>

<!-- form column start-->
            <div class="row">
                <%= form_for(@font) do |f| %>    
                    <fieldset>

                        <!-- form input[select] -->   
                        <label class="label_80">Font Name:</label>
                        <span>
                           <%= f.text_field :name %>
                        </span></br>

                        <!-- form input[select] -->   
                        <label class="label_80">Style:</label>
                        <span>
                           <%= f.text_field :style %>
                        </span></br>

                        <!-- form input[file] -->
                        <label class="label_80">Image:</label>
                        <span>
                           <%= f.file_field :font, accept: "image/*" %>
                        </span></br>
                                                
                    </fieldset>
            </div>
<!-- column footer start--> 
            <div class="row">
                <div class="form_footer">
                    <%= f.submit "save"%>
                    <%= link_to "Back to Fonts", mjweb.fonts_path %>
                </div>
                <% end %>
            </div>
        </div>
    </div>

    <div class="col-1-3 column_2">
        <div class="border blank_column"></div>
    </div>
    <div class="col-1-3 column_3">
        <div class="border blank_column"></div>
    </div>
</div>