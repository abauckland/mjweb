<div class="row title_band">
    <div class="page_title">
        <h1>Loaded Fonts</h1>
    </div>
    <div class="title_help" id="font_index"></div>       
    <div><%= link_to 'Upload Font', new_font_path, class: "title_button" %></div>
</div>

<div class="row">

    <div class="col-1-1 column_1">
        <div class="border">
                                        
        <%= render :partial => "flash_notice" %>                 
                        
            <div class="row">
                <% if @fonts %>        
                    <% @fonts.each do |font| %> 
                        <div class="image_tile">
                            <%= image_tag(font.font_url)%>
                            <%= link_to '', font, method: :delete, data: { confirm: 'Are you sure?' }, title: "delete image" %>                      
                        </div>
                        <% end %>
                <% else %> 
                    <p>No font images have been uploaded.</p>
                <% end %>   
            </div>
        </div>
    </div>

</div>            