<div class="page_title">
    <h1>Loaded Backgrounds</h1>
    <div class="page_title_button"><%= link_to 'Upload Font', new_font_path %></div>
</div>

<div class="image_content_with_title">

    <% if @fonts %>        
        <% @fonts.each do |font| %>               
            <div class="web_image_tile">
                <div class="image"><%= image_tag(font.font_url)%></div>                  
                <div class="web_image_delete"><%= link_to '', font, method: :delete, data: { confirm: 'Are you sure?' }, class: 'line_delete_icon', title: "delete image"  %>
                </div>
            </div>
        <% end %>    
    <% else %>
        <div class="web_image_tile">
            No font images have been uploaded.
        </div>
    <% end %>
</div>            